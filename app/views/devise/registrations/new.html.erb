
<div class ="container">
  <div class="row">
    <div class="col-md-12">
      <%= devise_error_messages! %>
      <div class="form-div">
        <h4>Sign up</h4>


        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div><%= f.text_field :name, autocomplete:"off", placeholder:"ニックネーム",:class => "email-txt" %></div>

          <div class="field">
            <%= f.email_field :email, autocomplete: "email", :placeholder => "メールアドレス",:class => "email-txt" %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "off" , :placeholder => "パスワード", :class => "password-txt" %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "パスワード(確認)", :class => "password-txt" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class:"btn red-btn btn-xs" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

